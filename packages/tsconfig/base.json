{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5",
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "baseUrl": "../",
    "paths": {
      "@mbari/react-ui": ["react-ui/src/*"],
      "@mbari/react-ui/*": ["react-ui/src/*"],
      "@mbari/utils": ["utils/src/*"],
      "@mbari/utils/*": ["utils/src/*"],
      "@mbari/api-client": ["api-client/src/*"],
      "@mbari/api-client/*": ["api-client/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
