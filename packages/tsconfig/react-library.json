{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "module": "ESNext",
    "target": "es6"
  }
}
