{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "$NEXT_PUBLIC_BASE_URL",
    "$NEXT_PUBLIC_API_HOST",
    "$NEXT_PUBLIC_WEBSOCKET_URL",
    "$NODE_ENV",
    "$PORT",
    "$CI"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "$NEXT_PUBLIC_BASE_URL",
        "$NEXT_PUBLIC_API_HOST",
        "$NEXT_PUBLIC_WEBSOCKET_URL",
        "$NODE_ENV"
      ],
      "outputs": [".next/**", "dist/**", "lib/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
